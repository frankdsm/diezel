{
  "name": "diezel",
  "version": "0.1.0",
  "description": "A simple, powerful React framework with RSC support",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./vite": {
      "types": "./dist/vite.d.ts",
      "import": "./dist/vite.js"
    },
    "./server-actions": {
      "types": "./dist/server-actions.d.ts",
      "import": "./dist/server-actions.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.js"
    }
  },
  "bin": {
    "diezel": "./dist/cli/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/vite.ts src/server-actions.ts src/client.ts src/cli/index.ts --format esm --dts --external react --external react-dom --external vite --external @vitejs/plugin-react --external nitropack --external h3 --external hono --external postcss",
    "dev": "tsup src/cli/index.ts --watch"
  },
  "dependencies": {
    "@vitejs/plugin-react": "^4.3.0",
    "@rollup/plugin-replace": "^6.0.0",
    "dotenv": "^16.4.0",
    "h3": "^1.13.0",
    "hono": "^4.6.0",
    "nitropack": "^2.10.0",
    "postcss": "^8.4.0",
    "vite": "^6.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.7.0"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "keywords": [
    "react",
    "vite",
    "rsc",
    "server-components",
    "framework",
    "hono"
  ],
  "license": "MIT"
}
